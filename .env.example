# MCP Server Configuration
# Copy this file to .env and customize values

# Server identity
MCP_SERVER_NAME=mcp-server

# Application settings
APP_VERSION=1.0.0
APP_DEBUG=false

# Controller paths (colon-separated, relative or absolute)
# Default: src (controllers in src/ directory)
# Multiple paths: src:custom:/absolute/path
MCP_CONTROLLER_PATHS=src

# Session storage
MCP_SESSIONS_DIR=/app/storage/mcp-sessions

# Optional: API keys for controllers
# API_KEY=your-api-key-here

# Redis configuration (for reference system)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MongoDB configuration
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Docker-specific settings (for docker-compose)
PORT=8081
DOCKER_IMAGE=davidsmith3/mcp-server:latest
